{% extends 'base.html.twig' %}

{% block body %}
    <h1>Opcion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opcion.id }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ opcion.valor }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ opcion.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ opcion.height }}</td>
            </tr>
            <tr>
                <th>X</th>
                <td>{{ opcion.x }}</td>
            </tr>
            <tr>
                <th>Y</th>
                <td>{{ opcion.y }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('opcion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('opcion_edit', { 'id': opcion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
