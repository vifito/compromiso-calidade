{% extends 'base.html.twig' %}

{% block body %}
    <h1>Resposta</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ respostum.id }}</td>
                <td>{{ respostum.enquisa.ficheiro }}</td>
                <td>{{ respostum.opcion.valor }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resposta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('resposta_edit', { 'id': respostum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
